<h2 class="w-75 mx-auto"><strong>Follow Users</strong></h2>

<% if @users.exists? %>
<table class="table table-white w-75 mx-auto">
  <thead>
    <tr>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p class="w-75 mx-auto">ユーザーはいません</p>
<% end %>